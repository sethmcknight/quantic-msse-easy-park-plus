classDiagram
    class Vehicle {
        -VehicleId vehicle_id
        -String plate_number
        -String make
        -String model
        -String color
        -VehicleStatus status
        +register_vehicle(plate_number, make, model, color)
        +update_vehicle_details(new_make, new_model, new_color)
        +update_vehicle_status(new_status)
    }

    class VehicleDetails {
        -String owner_name
        -String contact_info
        -List~VehicleHistory~ history
    }

    class VehicleStatus {
        <<enumeration>>
        Active
        Inactive
        Banned
    }

    class VehicleHistory {
        -DateTime event_time
        -String event_description
    }

    Vehicle ||--|| VehicleId : has
    Vehicle ||--|| VehicleDetails : has
    Vehicle ||--|| VehicleStatus : has
    VehicleDetails ||--o{ VehicleHistory : contains
