classDiagram
    class Customer {
        -CustomerId customer_id
        -CustomerProfile profile
        -CustomerType customer_type
        -List~VehicleRegistration~ linked_vehicles
        -List~PaymentMethod~ payment_methods
        -PassholderInfo passholder_details
        -List~CommuterBenefitLink~ commuter_benefits
        -AccountStatus account_status
        +register_new_customer(profile_details, customer_type)
        +link_vehicle_to_customer(vehicle_registration)
        +unlink_vehicle_from_customer(vehicle_registration)
        +add_payment_method(payment_details)
        +remove_payment_method(payment_method_id)
        +update_profile(new_profile_details)
        +enroll_as_passholder(pass_type, start_date, access_rules)
        +link_commuter_benefit(benefit_details)
        +deactivate_account()
    }

    class CustomerProfile {
        -String name
        -EmailAddress email_address
        -PhoneNumber phone_number
        -LanguageCode preferred_language
    }

    class PaymentMethod {
        -PaymentMethodId payment_method_id
        -PaymentType type
        -EncryptedString details
        -Boolean is_default
    }

    class PassholderInfo {
        -PassType pass_type
        -String pass_id
        -TimeRange validity_period
        -List~LotId~ associated_lot_ids
        -PassStatus status
        -List~PassholderAccessRule~ access_rules
    }

    class PassholderAccessRule {
        -String rule_id
        -String description
        -List~DayOfWeekEnum~ allowed_days
        -Time start_time
        -Time end_time
        -Boolean applies_to_holidays
    }

    class CommuterBenefitLink {
        -String benefit_provider_name
        -String benefit_account_id
        -String benefit_type
    }

    class CustomerType {
        <<enumeration>>
        Individual
        Business
        Fleet
        Vendor
        Employee
    }

    class PaymentType {
        <<enumeration>>
        CreditCard
        BankAccount
        DigitalWallet
    }

    class PassType {
        <<enumeration>>
        Monthly_24_7
        Monthly_BusinessHours
        Annual_VIP
    }

    class PassStatus {
        <<enumeration>>
        Active
        Expired
        Suspended
    }

    class AccountStatus {
        <<enumeration>>
        Active
        Suspended_PaymentIssue
        Deactivated
        PendingVerification
    }

    class DayOfWeekEnum {
        <<enumeration>>
        Mon
        Tue
        Wed
        Thu
        Fri
        Sat
        Sun
    }

    Customer ||--|| CustomerId : has
    Customer ||--|| CustomerProfile : has
    Customer ||--|| CustomerType : has
    Customer ||--|| AccountStatus : has
    Customer ||--o{ PaymentMethod : has
    Customer ||--o| PassholderInfo : has
    Customer ||--o{ CommuterBenefitLink : has
    PassholderInfo ||--o{ PassholderAccessRule : has
    PassholderInfo ||--|| PassType : has
    PassholderInfo ||--|| PassStatus : has